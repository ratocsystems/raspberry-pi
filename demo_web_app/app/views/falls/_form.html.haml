= form_for @fall do |f|
  - if @fall.errors.any?
    #error_explanation
      %h2= "#{pluralize(@fall.errors.count, "error")} prohibited this fall from being saved:"
      %ul
        - @fall.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :count
    = f.number_field :count
  .field
    = f.label :machine
    = f.text_field :machine
  .field
    = f.label :date
    = f.datetime_select :date
  .actions
    = f.submit 'Save'
